@page
@model Mikroprojekt_2.Pages.ReservationModel
@{
}

<div class="col-md-4 text-center mb-2">
    <img src="~/Images/Room1.jpg" class="img-fluid rounded mb-2" alt="Montenegro">
    Rum @Model.room.Name <br />
    ✅ Plads til @Model.room.Capacity personer <br />
    @((Model.room.Equipment.Contains("Forplejning")) ? "✅" : "❌") Forplejning <br />
    @((Model.room.Equipment.Contains("Smartboard")) ? "✅" : "❌") Smartboard
</div>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tidsvalg</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <script>
        function toggleButton(button) {
            button.classList.toggle("custom-red"); // Skifter til rød
            button.classList.toggle("custom-blue"); // Skifter tilbage til custom blå
        }

        function reserveTime(button) {
            let selectedTime = button.innerText;
            document.getElementById("confirmationMessage").innerText = "Du har reserveret tid " + selectedTime + " Tirsdag d. 1 April";
            document.getElementById("confirmationMessage").classList.remove("d-none");
        }
         function reserveTime1(button) {
            let selectedTime1 = button.innerText;
            document.getElementById("confirmationMessage1").innerText = "Du har reserveret tid " + selectedTime1 + " Onsdag d. 2 April";
            document.getElementById("confirmationMessage1").classList.remove("d-none");
         }
             function reserveTime2(button) {
            let selectedTime2 = button.innerText;
            document.getElementById("confirmationMessage2").innerText = "Du har reserveret tid " + selectedTime2 + " Torsdag d. 3 April";
            document.getElementById("confirmationMessage2").classList.remove("d-none");
        }

    </script>
</head>
<body class="container mt-5">
    <h3 class="mb-3">📅 Tirsdag den 1. april 2025</h3>

    <form id="timeForm" method="post" action="/Home/SubmitTime">
        <input type="hidden" id="selectedTime" name="selectedTime">
        <input type="hidden" id="removedreservation" name="removedreservation">
        <div class="d-grid gap-2 d-md-flex">
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">11.45</button>
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">12.00</button>
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">12.30</button>
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">12.45</button>
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">13.00</button>
        </div>
        <div class="d-grid gap-2 d-md-flex mt-2">
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">13.30</button>
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">13.45</button>
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">14.00</button>
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">14.15</button>
            <button type="button" class="btn custom-blue" onclick="toggleButton(this); reserveTime(this);">14.30</button>
        </div>
    </form>

    <div id="confirmationMessage" class="alert alert-success mt-3 d-none"></div>
</body>
