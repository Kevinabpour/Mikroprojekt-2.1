@page
@model Mikroprojekt_2.Pages.BookingcshtmlModel
@{
}

<h2>Mødebooking DSV Headquarters</h2>
<h5>Book eller ændre i dit ønskede mødelokale</h5>
<!DOCTYPE html>
<html>
<body>

    <div class="container-fluid"> <!-- FILTER DROPDOWN MENU-->
        <div class="d-flex justify-content-end">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    Filtrer
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <form method="post"> <!--each dropdown item is a form that sends the chosen filter value to the backend-->
                            <input type="hidden" name="FilterChoice" value="Smartboard/Projektor" />
                            <button type="submit" class="dropdown-item">Smartboard/Projektor</button>
                        </form>
                    </li>
                    <li>
                        <form method="post">
                            <input type="hidden" name="FilterChoice" value="Forplejning" />
                            <button type="submit" class="dropdown-item">Forplejning</button>
                        </form>
                    </li>
                    <li>
                        <form method="post">
                            <input type="hidden" name="FilterChoice" value="5-10 personer" />
                            <button type="submit" class="dropdown-item">5-10 personer</button>
                        </form>
                    </li>
                    <li>
                        <form method="post">
                            <input type="hidden" name="FilterChoice" value="10-25 personer" />
                            <button type="submit" class="dropdown-item">10-25 personer</button>
                        </form>
                    </li>
                    <li>
                        <form method="post">
                            <input type="hidden" name="FilterChoice" value="25-40 personer" />
                            <button type="submit" class="dropdown-item">25-40 personer</button>
                        </form>
                    </li>
                    <li>
                        <form method="post">
                            <input type="hidden" name="FilterChoice" value="40-500 personer" />
                            <button type="submit" class="dropdown-item">40-500 personer</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container mt-4"> <!--BILLEDER AF MØDERUM-->
        <div class="row mb-4">
            <!--loops through all the filtered rooms from the switch in the backend) and displays them.-->
            @foreach (var room in Model.Rooms)
            {
                <div class="col-md-4 text-center mb-2">
                    <img src="~/Images/Room1.jpg" class="img-fluid rounded mb-2" alt="Montenegro">
                    <a asp-page="/Reservation" asp-route-id="@room.RoomID" class="btn btn-primary">Book tid i lokale @room.Name</a> <br />
                    ✅ Plads til @room.Capacity personer <br />
                    @(room.Equipment.Contains("Forplejning") ? "☑️" : "❌") Forplejning <br />
                    @(room.Equipment.Contains("Smartboard") ? "☑️" : "❌") Smartboard
                </div>
            }
        </div>
    </div>

         <!--LInk that sends you back to the booking site-->
        <p>Ønsker du at ændre din booking? <a href="Booking">Klik her</a>.</p>
    
</body>
</html>